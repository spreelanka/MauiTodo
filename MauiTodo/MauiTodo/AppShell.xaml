<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiTodo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:localroot="clr-namespace:MauiTodo"
    xmlns:local="clr-namespace:MauiTodo.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate localroot:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Todo Lists"
        ContentTemplate="{DataTemplate local:AllTodoListsPage}"
        Route="AllTodoListsPage" />

</Shell>

